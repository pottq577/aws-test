{
  "family": "sparta-tigers-task",
  "networkMode": "bridge",
  "requiresCompatibilities": [
    "EC2"
  ],
  "cpu": "1024",
  "memory": "2048",
  "containerDefinitions": [
    {
      "name": "sparta-tigers-container",
      "image": "placeholder",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8080,
          "hostPort": 8080,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "database_local_url",
          "value": "${DB_URL}"
        },
        {
          "name": "database_local_username",
          "value": "${DB_USER}"
        },
        {
          "name": "database_local_password",
          "value": "${DB_PASSWORD}"
        }
      ]
    }
  ]
}
