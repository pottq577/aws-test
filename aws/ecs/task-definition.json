{
  "family": "sparta-tigers-task",
  "networkMode": "bridge",
  "requiresCompatibilities": [
    "EC2"
  ],
  "cpu": "1024",
  "memory": "2048",
  "containerDefinitions": [
    {
      "name": "sparta-tigers-container",
      "image": "DOCKER_IMAGE_URI_REPLACE_ME",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8080,
          "hostPort": 8080,
          "protocol": "tcp"
        }
      ],
      "memory": 2048,
      "environment": [
        {
          "name": "database_local_url",
          "value": "${{ secrets.DATABASE_LOCAL_URL_EC2 }}"
        },
        {
          "name": "database_local_username",
          "value": "${{ secrets.DATABASE_LOCAL_USERNAME}}"
        },
        {
          "name": "database_local_password",
          "value": "${{ secrets.DATABASE_LOCAL_PASSWORD }}"
        }
      ]
    }
  ]
}
